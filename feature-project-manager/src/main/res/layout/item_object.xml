<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:backgroundTint="@color/colorOnBackground"
    android:paddingVertical="@dimen/padding_normal">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvName"
        style="@style/AlmagestText.TypeDefault.Title.RobotoMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_normal"
        app:layout_constraintEnd_toStartOf="@id/tvImageCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="some text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvType"
        style="@style/AlmagestText.TypeSecondary.Normal.RobotoMedium"
        android:layout_marginTop="@dimen/margin_mini"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_normal"
        app:layout_constraintEnd_toStartOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        tools:text="some text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvStatus"
        style="@style/AlmagestText.TypeSecondary.Normal.RobotoMedium"
        android:layout_marginTop="@dimen/margin_mini"
        android:layout_width="0dp"
        android:gravity="end"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvType"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        tools:text="status" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvImageCount"
        style="@style/AlmagestText.TypeDefault.Title.RobotoMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5" />

</androidx.constraintlayout.widget.ConstraintLayout>